<script>jQuery('div.elementor-widget-posts').each(function(_, widget) {
  // Add the id to the pagination URL
  jQuery('a.page-numbers', widget).map(function(_, link) {
    jQuery(link).attr('href', jQuery(link).attr('href') + '#top-posts');
  });
});</script>

